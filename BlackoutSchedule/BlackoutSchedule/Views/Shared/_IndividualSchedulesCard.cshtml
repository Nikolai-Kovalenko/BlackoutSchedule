@model BlackoutSchedule.Models.ViewModels.HomeVM

<div class="col-lg-12 col-md-6 pb-2 filter @Model.GroupName.Replace(' ', '_')">

    <table class="table-bordered table-striped table" style="width:100%">
        <tbody>
        <tr>
            <td style="width: 20%;">
                <!-- Card-->
                <div class="card bg-white pt-2 px-2 rounded shadow-sm" style="border:1px solid #222">
                    <div class="col-4">
                        <span class="badge p-2 w-100 text-dark border" style="background-color:lavenderblush">@Model.GroupName</span>
                    </div>
                    <div class="card-body p-1 px-3 row">
                        @{
                            foreach (var i in Model.Schedules)
                            {
                                var time = $"{i.StartTime} - {i.FinishTime}";
                                <p>
                                    @time
                                </p>
                                
                            }
                        }
                    </div>

                </div>
            </td>

            <td style="width: 50%;">
                <div>
                    @{
                        var addresses = string.Join("; ", Model.Addresses);
                        @addresses
                    }
                </div>
            </td>
            <td style="width: 10%;">
                @{
                    var lightStatus = Model.IsLightNow() ? "On" : "Off";
                    var bgColor = Model.IsLightNow() ? "green" : "red";
                }
                <div style="background-color: @bgColor; color: white; text-align: center; padding: 5px;">
                    @lightStatus
                </div>
            </td>
            <td style="width: 20%;">
                <div class="w-55 btn-group" role="group">
                        <a asp-controller="Schedules" asp-route-Id="@Model.GroupId" asp-action="Update" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Home" asp-route-Id="@Model.GroupId" asp-action="ExportData" class="btn btn-warning mx-2">
                        <i class="bi bi-download"></i> Export JSON
                    </a>
                </div>
            </td>

        </tr>
        </tbody>
    </table>

</div>